    <script>
        layui.use('table', function(){
            var storage=window.localStorage;
            var table = layui.table;
            var token=storage.getItem('token');
            console.log(token);
            table.render({
                elem: '#test'
                ,url:'/Manage/Usdt/frozenLogList?token='+token
                ,toolbar: '#toolbarDemo'
                ,title: 'DMR流水'
                ,cols: [[
                    {type: 'checkbox', fixed: 'left'}
                    ,{field:'id', title:'ID', width:80, fixed: 'left', unresize: true, sort: true}
                    ,{field:'uid', title:'用户ID', width:80, edit: 'text'}
                    ,{field:'d_frozen', title:'原冻结总额', width:200}
                    ,{field:'ratio', title:'解冻比率', width:200}
                    ,{field:'money', title:'本次解冻数量', width:180, edit: 'text'}
                    ,{field:'datetime', title:'解冻时间', width:280}
                ]]
                ,page: true
            });


            //监听行工具事件
            table.on('tool(test)', function(obj){
                var data = obj.data;
                console.log(data);
                var id=data.id;//数据id
                if(obj.event === 'del'){
                    //驳回
                    order_view('驳回', '/Manage/Usdt/delEdit?token='+token+'&id='+id,500,400);
                } else if(obj.event === 'show'){
                    //展示凭证
                    var path=data.path;
                    order_view('凭证展示', path ,500,500);
                } else if(obj.event === 'pass'){
                    //通过
                    layer.confirm('您确定通过此转入订单吗？',function(index){
                        $.ajax({
                            url:"/Manage/Usdt/pass",
                            type:'post',
                            data:{'id':id,'token':token},
                            success:function(res){
                                if(res.code==200){
                                    layer.alert('操作成功！',function () {
                                        location.replace(location.href);
                                    });
                                }else{
                                    layer.alert('操作失败！');
                                }
                            }
                        });
                    });

                }
            });
        });
    </script>

