                $v['datetime'] = date('m-d H:i', strtotime($v['datetime']));
                if ($v['lx'] == 1) {
                    $v['money'] = '+' . $v['money'];
                    $v['der'] = 'DMR转入';
                } else {
                    $v['money'] = '-' . $v['money'];
                    $v['der'] = 'DMR转出';
                }
            }
        }
        $data = [
            'money' => empty($wall) ? [] : $wall[0],
            'list' => empty($list) ? [] : $list,
        ];
        return $this->writeJson(Status::CODE_OK, 'SUCCESS', $data);

    }

